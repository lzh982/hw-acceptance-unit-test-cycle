<h1>Search similar movie</h1>
<table id="movies">
  <thead>
    <tr>
      <th class = "<%= @title_header %>">
        <%= link_to 'Movie Title', movies_path(:sort => 'title'), :id => 'title_header' %>
      </th>
      <th>Rating</th>
      <th class = "<%= @date_header %>">
        <%= link_to 'Release Date', movies_path(:sort => 'release_date'), :id => 'release_date_header' %>
      </th>
      <th>Director</th>

      <th>More Info</th>
    </tr>
  </thead>
  <tbody>
    <% @similar.each do |movie| %>
      <tr>
        <td>
          <%= movie.title  %>
        </td>
        <td>
          <%= movie.director  %>
        </td>
        <td>
          <%= movie.rating %>
        </td>
        <td>
          <%= movie.release_date %>
        </td>
        <td>
          <%= link_to "More about #{movie.title}", movie_path(movie) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'All Movies', movie_path %>